<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mRootView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mRootViewBgPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_easy_text_button_normal"
        app:layout_constraintBottom_toBottomOf="@id/mLeftTextView"
        app:layout_constraintEnd_toEndOf="@+id/mRightTextView"
        app:layout_constraintStart_toStartOf="@id/mLeftTextView"
        app:layout_constraintTop_toTopOf="@id/mLeftTextView" />

    <TextView
        android:id="@+id/mLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_easy_text_button_normal"
        android:gravity="center"
        android:minWidth="44dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="A"
        android:textColor="@color/easy_text_button_normal_bound"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mRightTextView"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="gold"
        android:textColor="@color/easy_text_button_normal_bound"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/mLeftTextView"
        app:layout_constraintStart_toEndOf="@id/mLeftTextView"
        app:layout_constraintTop_toTopOf="@id/mLeftTextView" />

    <ImageView
        android:id="@+id/mAnswerResultImg"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:visibility="gone"
        android:src="@drawable/answer_icon_correct"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/mLeftTextView"
        app:layout_constraintStart_toStartOf="@id/mLeftTextView" />

</android.support.constraint.ConstraintLayout>